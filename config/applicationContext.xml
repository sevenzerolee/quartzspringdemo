 	<bean id="helloJobDetail" class="org.springframework.scheduling.quartz.JobDetailBean">
	    <property name="jobClass">
	        <value>org.sevenzero.quartz.quartzspringdemo.MyDetailQuartzJobBean</value>
	    </property>
	    
		<property name="jobDataAsMap">
		    <map>
		        <!-- <entry key="helloJob"  value-ref="helloJob"></entry> -->
		        <entry key="targetObject" value="helloJob" />
		        <entry key="targetMethod" value="exec" />
		        
		    </map>
		</property>
	</bean>
	
	<!--   每隔五秒执行一次  -->
	<bean id="helloJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="name" value="helloJobTrigger1" />
		<property name="group" value="triggerGroup1" />
		<property name="jobDetail" ref="helloJobDetail" />
		<property name="cronExpression">
 			<value>0/5 * * * * ?</value>
		</property>
	</bean>
	<!-- HelloJob End -->
	
	
